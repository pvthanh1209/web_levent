
@{
    ViewBag.Title = "Đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Quản lý đơn hàng</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Quản lý đơn hàng</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="row project-wrapper">
    <div class="col-lg-12">
        <div class="card p-0">
            <div class="card-header d-flex align-items-center">
                <h4 class="card-title flex-grow-1 mb-0">Quản lý đơn hàng</h4>
            </div><!-- end cardheader -->
            <div class="card-body">
                <div class="row pb-3">
                    <div class="col-md-4">
                        <label>
                            Tìm kiếm
                        </label>
                        <input type="text" class="form-control" id="txtSearch" placeholder="Tên sản phẩm,..." />
                    </div>
                    <div class="col-md-2">
                        <button type="button" class="btn btn-primary" style="margin-top:27px;" id="btnSearch"><i class="bx bx-search"></i></button>
                    </div>
                </div>
                <table class="table table-centered align-middle" id="tblOrder">
                </table>
            </div>
        </div>
    </div>
</div>
